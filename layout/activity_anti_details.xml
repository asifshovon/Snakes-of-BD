<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AntiDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D9EFEF">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Antivenom"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@color/teal_200"
        android:textColor="@color/black"/>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/antiimage"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/antivenompic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="Price : 1000 TK/Vial"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presentation : "
            android:padding="2dp"
            android:textSize="20sp"
            android:background="#1affdb"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Each ml Snake Venom Antiserum neutralizes not less than Cobra venom (Naja naja) 0.60 mg, Common Krait venom (Bungarus caeruleus) 0.45 mg, Russell's Viper venom (Vipera russelli) 0.60 mg, Saw-scaled Viper venom (Echis carinatus) 0.45 mg."
                android:textSize="18sp"
                android:padding="2dp"
                android:background="@color/grey"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applications  : "
                    android:textSize="20sp"
                    android:background="#1affdb"
                    android:padding="2dp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Initial dose of 5-10 vials of Antivenom by slow intravenous infusion either undiluted at a speed of not more than 2 ml per minute\nIn the majority of cases of both neurotoxic and haemotoxic bites, total dose of 15-20 vials is adequate unless a proven recurrence of envenomation is established"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:background="@color/grey"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-cautions : "
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:background="#1affdb"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adrenaline 0.25 ml s/c to prevent possibility of adverse reactions. In haemotoxic bites, IM injections should be avoided till correction of coagulopathy to avoid formation of haematoma and oozing of blood.\nIn patients having tourniquet, it should be released slowly only after start of Antivenom administration."
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:background="@color/grey"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>




</ScrollView>