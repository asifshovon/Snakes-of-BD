<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEEED"
    tools:context=".Symptoms">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:background="@color/teal_700"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:text="Identify By Symptoms"
        android:gravity="center_horizontal"
        android:textColor="@color/white"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign of Teeth"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:id="@+id/spinnersign">




        </Spinner>





        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling now?"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/spinnerfeeling">


        </Spinner>





        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell me about Symptoms"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/spinnersymp">


        </Spinner>



        <TextView
            android:id="@+id/mresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DON'T BE AFRAID!\n\nThis might be a Non-venomous or Mild Venomous Snake. \n\nSee at Snakes Of BD option."
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="@color/white"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Search Snake"/>












    </LinearLayout>


</LinearLayout>