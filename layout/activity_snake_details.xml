<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EFEF"
    tools:context=".SnakeDetails"
    android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snake Details"
            android:gravity="center"
            android:background="@color/teal_200"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="40dp"
            android:layout_margin="20dp"
            android:layout_gravity="center">

        <ImageView
            android:id="@+id/popImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banded_krait"
            android:background="@color/teal_200"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/teal_700"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:text="Name :"
                    android:textSize="24sp" />
                </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/Vname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@color/white"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="2dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:text="Bionominal Name :"

                    android:textSize="20sp" />
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/Bname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:text="Venom Type : "
                    android:textSize="20sp" />
                </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/venom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text=""/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scientific Classification"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:background="@color/grey"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@color/purple_200"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kingdom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kingdom : " />

            <TextView
                android:id="@+id/phylum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phylum : " />

            <TextView
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order : " />

            <TextView
                android:id="@+id/suborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sub-Order : " />

            <TextView
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family : " />


            <TextView
                android:id="@+id/genus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genus : " />

            <TextView
                android:id="@+id/species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Species : " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@color/white"

            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="Description : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/descrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:textSize="15dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>